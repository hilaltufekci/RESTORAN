                <a asp-action="Edit" asp-route-id="@item.YemekNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.YemekNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.YemekNo">Delete</a>
