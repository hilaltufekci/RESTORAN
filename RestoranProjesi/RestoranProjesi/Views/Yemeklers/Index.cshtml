        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YemekAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porsiyon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ŞefAdi)
            </td>
